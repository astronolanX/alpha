---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['bottom-sheet', className]} data-open="false">
  <div class="panel">
    <button class="toggle" aria-label="Toggle info panel" aria-expanded="false">
      Â©
    </button>
    <div class="content">
      <slot />
    </div>
  </div>
</div>

<style>
  .bottom-sheet {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 50;
    pointer-events: none;
  }

  .panel {
    position: relative;
    transform: translateY(100%);
    transition: transform 0.3s ease-out;
    pointer-events: auto;
  }

  .bottom-sheet[data-open="true"] .panel {
    transform: translateY(0);
  }

  .toggle {
    position: absolute;
    top: 0;
    right: 1.5rem;
    transform: translateY(calc(-100% - 1.5rem));
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    color: var(--color-text-muted);
    background: var(--color-surface-elevated);
    border: 1px solid var(--color-surface-accent);
    border-radius: 50%;
    cursor: pointer;
    transition: color 0.2s, border-color 0.2s;
  }

  .toggle:hover {
    color: var(--color-text-secondary);
    border-color: var(--color-text-muted);
  }

  .content {
    background: var(--color-surface-elevated);
    border-top: 1px solid var(--color-surface-accent);
    padding: 1.5rem;
  }
</style>

<script>
  function initBottomSheet() {
    const sheet = document.querySelector('.bottom-sheet') as HTMLElement;
    if (!sheet) return;

    const toggle = sheet.querySelector('.toggle') as HTMLButtonElement;

    function setOpen(open: boolean) {
      sheet.dataset.open = String(open);
      toggle.setAttribute('aria-expanded', String(open));
    }

    toggle?.addEventListener('click', () => {
      const isOpen = sheet.dataset.open === 'true';
      setOpen(!isOpen);
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && sheet.dataset.open === 'true') {
        setOpen(false);
      }
    });
  }

  // Run on initial load and View Transitions navigation
  initBottomSheet();
  document.addEventListener('astro:page-load', initBottomSheet);
</script>
