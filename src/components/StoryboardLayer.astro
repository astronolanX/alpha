---
// Storyboard Annotations - decorative elements that appear with grid mode
---

<div class="storyboard-layer" aria-hidden="true">
  <!-- Corner markers -->
  <div class="marker top-4 left-4">
    <span class="marker-label">01</span>
    <div class="marker-cross"></div>
  </div>
  <div class="marker top-4 right-4 flex flex-row-reverse">
    <span class="marker-label">02</span>
    <div class="marker-cross"></div>
  </div>
  <div class="marker bottom-4 left-4">
    <span class="marker-label">03</span>
    <div class="marker-cross"></div>
  </div>
  <div class="marker bottom-4 right-4 flex flex-row-reverse">
    <span class="marker-label">04</span>
    <div class="marker-cross"></div>
  </div>

  <!-- Floating annotations -->
  <div class="annotation top-1/2 left-4 -translate-y-1/2 -rotate-90 origin-left">
    <span class="annotation-line"></span>
    <span class="annotation-text">main.terminal</span>
  </div>
  <div class="annotation top-20 right-10">
    <span class="annotation-dot"></span>
    <span class="annotation-text">interactive</span>
  </div>
  <div class="annotation bottom-20 left-1/2 -translate-x-1/2">
    <span class="annotation-bracket">[</span>
    <span class="annotation-text">v1.0</span>
    <span class="annotation-bracket">]</span>
  </div>

  <!-- Dimension lines -->
  <div class="dimension top-2 left-1/2 -translate-x-1/2">
    <span class="dimension-line"></span>
    <span class="dimension-value">100vw</span>
    <span class="dimension-line"></span>
  </div>
  <div class="dimension right-2 top-1/2 -translate-y-1/2 rotate-90">
    <span class="dimension-line"></span>
    <span class="dimension-value">100vh</span>
    <span class="dimension-line"></span>
  </div>
</div>
